---
import "../styles/global.css";

const token = Astro.url.searchParams.get("token");
const error = Astro.url.searchParams.get("error");

if (!token) {
  return Astro.redirect("/login");
}
---

<!doctype html>
<html lang="fr">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Nouveau mot de passe — lovable-to-astro</title>
  </head>
  <body class="bg-gray-50 min-h-screen flex items-center justify-center">
    <div class="w-full max-w-sm">
      <div class="bg-white rounded-lg border border-gray-200 p-8">
        <h1 class="text-xl font-bold text-gray-900 text-center mb-6">
          Nouveau mot de passe
        </h1>

        {error && (
          <div class="mb-4 p-3 bg-red-50 border border-red-200 rounded-md text-sm text-red-700">
            Le mot de passe doit faire au moins 8 caractères.
          </div>
        )}

        <form method="POST" action="/api/auth/reset-password" class="space-y-4">
          <input type="hidden" name="token" value={token} />
          <div>
            <label for="password" class="block text-sm font-medium text-gray-700 mb-1">Nouveau mot de passe</label>
            <input
              type="password"
              id="password"
              name="password"
              required
              minlength="8"
              autocomplete="new-password"
              class="w-full px-3 py-2 border border-gray-300 rounded-md text-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
            />
          </div>
          <button
            type="submit"
            class="w-full py-2 bg-blue-600 text-white text-sm font-medium rounded-md hover:bg-blue-700"
          >
            Modifier le mot de passe
          </button>
        </form>
      </div>
    </div>
  </body>
</html>
