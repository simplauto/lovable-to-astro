---
import "../styles/global.css";
import { db } from "../lib/db";
import { projects, conversions, questions } from "../lib/db/schema";
import { desc, eq, sql, isNull } from "drizzle-orm";
import AddProjectDialog from "../components/AddProjectDialog";

const user = Astro.locals.user;

const allProjects = db
  .select({
    id: projects.id,
    name: projects.name,
    sourceRepo: projects.sourceRepo,
    createdAt: projects.createdAt,
    conversionCount: sql<number>`(SELECT COUNT(*) FROM conversions WHERE project_id = ${projects.id})`,
    pendingQuestions: sql<number>`(SELECT COUNT(*) FROM questions q JOIN conversions c ON q.conversion_id = c.id WHERE c.project_id = ${projects.id} AND q.answer IS NULL)`,
    lastStatus: sql<string | null>`(SELECT status FROM conversions WHERE project_id = ${projects.id} ORDER BY started_at DESC LIMIT 1)`,
  })
  .from(projects)
  .orderBy(desc(projects.createdAt))
  .all();

function statusBadge(status: string | null) {
  if (!status) return { label: "Aucune conversion", cls: "bg-secondary text-secondary-foreground" };
  if (status === "done") return { label: "Terminé", cls: "bg-green-100 text-green-800" };
  if (status === "error") return { label: "Erreur", cls: "bg-red-100 text-red-800" };
  if (status === "waiting_answers") return { label: "En attente", cls: "bg-orange-100 text-orange-800" };
  return { label: status, cls: "bg-blue-100 text-blue-800" };
}
---

<!doctype html>
<html lang="fr">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Projets — lovable-to-astro</title>
  </head>
  <body class="bg-background min-h-screen">
    <nav class="bg-card border-b border-border">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between h-16">
          <div class="flex items-center">
            <span class="text-lg font-bold text-foreground">lovable-to-astro</span>
          </div>
          {user && (
            <div class="flex items-center gap-4">
              <span class="text-sm text-muted-foreground">{user.email}</span>
              <form method="POST" action="/api/auth/logout">
                <button
                  type="submit"
                  class="text-sm text-muted-foreground hover:text-foreground transition-colors"
                >
                  Déconnexion
                </button>
              </form>
            </div>
          )}
        </div>
      </div>
    </nav>

    <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
      <div class="flex justify-between items-center mb-8">
        <div>
          <h1 class="text-2xl font-bold text-foreground">Projets</h1>
          <p class="mt-1 text-sm text-muted-foreground">
            Sélectionnez un projet ou ajoutez-en un nouveau.
          </p>
        </div>
        <AddProjectDialog client:load />
      </div>

      {allProjects.length === 0 ? (
        <div class="flex flex-col items-center justify-center py-24 text-center">
          <div class="rounded-full bg-muted p-4 mb-4">
            <svg xmlns="http://www.w3.org/2000/svg" class="size-8 text-muted-foreground" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
              <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 12.75V12A2.25 2.25 0 014.5 9.75h15A2.25 2.25 0 0121.75 12v.75m-8.69-6.44l-2.12-2.12a1.5 1.5 0 00-1.061-.44H4.5A2.25 2.25 0 002.25 6v12a2.25 2.25 0 002.25 2.25h15A2.25 2.25 0 0021.75 18V9a2.25 2.25 0 00-2.25-2.25h-5.379a1.5 1.5 0 01-1.06-.44z" />
            </svg>
          </div>
          <h2 class="text-lg font-semibold text-foreground">Aucun projet</h2>
          <p class="mt-1 text-sm text-muted-foreground max-w-sm">
            Commencez par ajouter un projet Lovable pour lancer la conversion vers Astro.
          </p>
          <div class="mt-6">
            <AddProjectDialog client:load />
          </div>
        </div>
      ) : (
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
          {allProjects.map((p) => {
            const badge = statusBadge(p.lastStatus);
            return (
              <a
                href={`/project/${p.id}`}
                class="block rounded-lg border border-border bg-card p-6 hover:border-ring hover:shadow-sm transition-all"
              >
                <div class="flex items-start justify-between">
                  <div class="min-w-0">
                    <h3 class="font-semibold text-card-foreground truncate">{p.name}</h3>
                    <p class="text-sm text-muted-foreground mt-0.5 truncate">{p.sourceRepo}</p>
                  </div>
                  <span class:list={["px-2 py-0.5 text-xs rounded-full font-medium shrink-0 ml-2", badge.cls]}>
                    {badge.label}
                  </span>
                </div>
                <div class="mt-4 flex gap-4 text-sm text-muted-foreground">
                  <span>{p.conversionCount} conversion{p.conversionCount !== 1 ? "s" : ""}</span>
                  {p.pendingQuestions > 0 && (
                    <span class="text-orange-600 font-medium">
                      {p.pendingQuestions} question{p.pendingQuestions !== 1 ? "s" : ""} en attente
                    </span>
                  )}
                </div>
              </a>
            );
          })}
        </div>
      )}
    </main>
  </body>
</html>
