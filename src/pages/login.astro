---
import "../styles/global.css";
import { getUserCount } from "../lib/auth";

const userCount = getUserCount();
const isBootstrap = userCount === 0;

const error = Astro.url.searchParams.get("error");
const registered = Astro.url.searchParams.get("registered");
---

<!doctype html>
<html lang="fr">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Connexion — lovable-to-astro</title>
  </head>
  <body class="bg-gray-50 min-h-screen flex items-center justify-center">
    <div class="w-full max-w-sm">
      <div class="bg-white rounded-lg border border-gray-200 p-8">
        <h1 class="text-xl font-bold text-gray-900 text-center mb-1">
          lovable-to-astro
        </h1>
        <p class="text-sm text-gray-500 text-center mb-6">
          {isBootstrap ? "Créer le premier compte administrateur" : "Connexion au dashboard"}
        </p>

        {error && (
          <div class="mb-4 p-3 bg-red-50 border border-red-200 rounded-md text-sm text-red-700">
            {error === "invalid" && "Email ou mot de passe incorrect."}
            {error === "domain" && "Seuls les emails @simplauto.com et @naeka.fr sont autorisés."}
            {error === "register_closed" && "L'inscription n'est pas disponible."}
            {error === "short_password" && "Le mot de passe doit faire au moins 8 caractères."}
          </div>
        )}

        {registered && (
          <div class="mb-4 p-3 bg-green-50 border border-green-200 rounded-md text-sm text-green-700">
            Compte créé. Connectez-vous.
          </div>
        )}

        {isBootstrap ? (
          <form method="POST" action="/api/auth/register" class="space-y-4">
            <div>
              <label for="name" class="block text-sm font-medium text-gray-700 mb-1">Nom</label>
              <input
                type="text"
                id="name"
                name="name"
                required
                class="w-full px-3 py-2 border border-gray-300 rounded-md text-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                placeholder="Prénom Nom"
              />
            </div>
            <div>
              <label for="email" class="block text-sm font-medium text-gray-700 mb-1">Email</label>
              <input
                type="email"
                id="email"
                name="email"
                required
                class="w-full px-3 py-2 border border-gray-300 rounded-md text-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                placeholder="vous@simplauto.com"
              />
            </div>
            <div>
              <label for="password" class="block text-sm font-medium text-gray-700 mb-1">Mot de passe</label>
              <input
                type="password"
                id="password"
                name="password"
                required
                minlength="8"
                class="w-full px-3 py-2 border border-gray-300 rounded-md text-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
              />
            </div>
            <button
              type="submit"
              class="w-full py-2 bg-blue-600 text-white text-sm font-medium rounded-md hover:bg-blue-700"
            >
              Créer le compte admin
            </button>
          </form>
        ) : (
          <form method="POST" action="/api/auth/login" class="space-y-4">
            <div>
              <label for="email" class="block text-sm font-medium text-gray-700 mb-1">Email</label>
              <input
                type="email"
                id="email"
                name="email"
                required
                class="w-full px-3 py-2 border border-gray-300 rounded-md text-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                placeholder="vous@simplauto.com"
              />
            </div>
            <div>
              <label for="password" class="block text-sm font-medium text-gray-700 mb-1">Mot de passe</label>
              <input
                type="password"
                id="password"
                name="password"
                required
                class="w-full px-3 py-2 border border-gray-300 rounded-md text-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
              />
            </div>
            <button
              type="submit"
              class="w-full py-2 bg-blue-600 text-white text-sm font-medium rounded-md hover:bg-blue-700"
            >
              Se connecter
            </button>
          </form>
        )}

        <p class="mt-4 text-xs text-gray-400 text-center">
          Accès réservé aux domaines @simplauto.com et @naeka.fr
        </p>
      </div>
    </div>
  </body>
</html>
