---
import Dashboard from "../../../layouts/Dashboard.astro";
import { db } from "../../../lib/db";
import { projects, questions, conversions } from "../../../lib/db/schema";
import { isNull, isNotNull, desc, eq, and } from "drizzle-orm";

const projectId = Number(Astro.params.id);
if (isNaN(projectId)) return Astro.redirect("/");

const [project] = await db.select().from(projects).where(eq(projects.id, projectId));
if (!project) return Astro.redirect("/");

const pendingQuestions = await db
  .select({
    id: questions.id,
    componentPath: questions.componentPath,
    questionText: questions.questionText,
    context: questions.context,
    createdAt: questions.createdAt,
  })
  .from(questions)
  .innerJoin(conversions, eq(questions.conversionId, conversions.id))
  .where(and(eq(conversions.projectId, projectId), isNull(questions.answeredAt)))
  .orderBy(desc(questions.createdAt));

const answeredQuestions = await db
  .select({
    id: questions.id,
    componentPath: questions.componentPath,
    answer: questions.answer,
    answeredAt: questions.answeredAt,
  })
  .from(questions)
  .innerJoin(conversions, eq(questions.conversionId, conversions.id))
  .where(and(eq(conversions.projectId, projectId), isNotNull(questions.answeredAt)))
  .orderBy(desc(questions.answeredAt))
  .limit(20);
---

<Dashboard title="File d'attente" projectId={projectId} projectName={project.name}>
  <div class="space-y-8">
    <div>
      <h1 class="text-2xl font-bold text-foreground">File d'attente</h1>
      <p class="mt-1 text-sm text-muted-foreground">
        Questions en attente de réponse pour la conversion.
      </p>
    </div>

    <div class="rounded-lg border border-border bg-card">
      <div class="px-6 py-4 border-b border-border">
        <h2 class="text-lg font-medium text-orange-600">
          En attente ({pendingQuestions.length})
        </h2>
      </div>
      {pendingQuestions.length === 0 ? (
        <div class="px-6 py-12 text-center text-muted-foreground">
          Aucune question en attente.
        </div>
      ) : (
        <div class="divide-y divide-border">
          {pendingQuestions.map((q) => (
            <div class="px-6 py-4 space-y-2">
              <div class="flex justify-between items-start">
                <span class="font-mono text-sm text-card-foreground">{q.componentPath}</span>
                <span class="text-xs text-muted-foreground">{q.createdAt}</span>
              </div>
              <p class="text-sm text-muted-foreground">{q.questionText}</p>
              {q.context && (
                <pre class="text-xs bg-muted p-3 rounded overflow-x-auto">{q.context}</pre>
              )}
              <form method="POST" action={`/api/queue/${q.id}/answer`} class="flex gap-2 pt-2">
                <button
                  type="submit"
                  name="answer"
                  value="static"
                  class="px-3 py-1.5 text-sm bg-secondary hover:bg-secondary/80 rounded-md font-medium"
                >
                  Statique
                </button>
                <button
                  type="submit"
                  name="answer"
                  value="island:client:load"
                  class="px-3 py-1.5 text-sm bg-blue-100 hover:bg-blue-200 text-blue-800 rounded-md font-medium"
                >
                  Îlot (client:load)
                </button>
                <button
                  type="submit"
                  name="answer"
                  value="island:client:visible"
                  class="px-3 py-1.5 text-sm bg-blue-50 hover:bg-blue-100 text-blue-700 rounded-md font-medium"
                >
                  Îlot (client:visible)
                </button>
                <button
                  type="submit"
                  name="answer"
                  value="island:client:idle"
                  class="px-3 py-1.5 text-sm bg-blue-50 hover:bg-blue-100 text-blue-600 rounded-md font-medium"
                >
                  Îlot (client:idle)
                </button>
              </form>
            </div>
          ))}
        </div>
      )}
    </div>

    {answeredQuestions.length > 0 && (
      <div class="rounded-lg border border-border bg-card">
        <div class="px-6 py-4 border-b border-border">
          <h2 class="text-lg font-medium text-muted-foreground">Historique</h2>
        </div>
        <div class="divide-y divide-border">
          {answeredQuestions.map((q) => (
            <div class="px-6 py-3 flex justify-between items-center">
              <span class="font-mono text-sm text-card-foreground">{q.componentPath}</span>
              <span class="px-2 py-1 text-xs rounded-full bg-green-100 text-green-800 font-medium">
                {q.answer}
              </span>
            </div>
          ))}
        </div>
      </div>
    )}
  </div>
</Dashboard>
